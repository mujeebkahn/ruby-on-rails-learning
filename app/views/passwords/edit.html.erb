<h1>Edit Password</h1>
<%= form_with(model: Current.user, url: edit_password_path, class: "form") do |form| %>
  <% if form.object.errors.any?%>
    <div class="alert alert-danger">
      <% form.object.errors.full_messages.each do |message|%>
        <div><%= message%></div>
      <%end%>
    </div>
  <%end %>
  <div class="mb-3">
    <div class="form-group">
      <%= form.label :password, class: "control-label" %>
      <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
    <div class="form-group">
      <%= form.label :password_confirmation, class: "control-label" %>
      <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
    </div>
    <%= form.submit "Update Password", class: "btn btn-primary mt-2" %>
  </div>
<% end %>
