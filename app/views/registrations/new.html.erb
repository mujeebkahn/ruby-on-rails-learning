<h1>Sign up</h1>
<%= form_with(model: @user, url: sign_up_path, class: "form") do |form| %>
  <% if @user.errors.any?%>
    <div class="alert alert-danger">
      <% @user.errors.full_messages.each do |message|%>
        <div><%= message%></div>
      <%end%>
    </div>
  <%end %>
  <div class="mb-3">
    <div class="form-group">
      <%= form.label :email, class: "control-label" %>
      <%= form.email_field :email, class: "form-control", placeholder: "asdf@xyz.com" %>
    </div>
    <div class="form-group">
      <%= form.label :password, class: "control-label" %>
      <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
    <div class="form-group">
      <%= form.label :password_confirmation, class: "control-label" %>
      <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
    </div>
    <%= form.submit "Sign up", class: "btn btn-primary mt-2" %>
  </div>
<% end %>
